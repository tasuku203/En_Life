<!--ユーザー情報-->
<div class="container px-4 px-sm-0">
  <div class="row">
    <!--部分テンプレート呼び出し-->
    <%= render 'users/users/list', user:@user %>
    <!--メイン-->
    <div class="col-md-8">
      <h2><%= @user.name %>の投稿</h2>
      <!--部分テンプレート呼び出し-->
      <%= render 'users/posts/list', posts:@posts %>
    </div>
    <div class="row justify-content-center">
      <%= paginate @posts %>
    </div>
  </div>
</div>

 
      