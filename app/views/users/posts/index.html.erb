

<div class="container">
  <div class="row">
    <div class="col-8">
      <h1>投稿一覧</h1>
    </div>
    <div class="col-4">
      <div class="search_form">
      <%= form_with url:search_posts_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword %>
        <%= f.submit "検索" %>
      <% end %>
      </div>
    </div>
  </div>
  <!--ここから投稿の一覧表示-->
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <% @posts.each do |post| %>
      <%= link_to show_image_post_path(post) do %>
        <%= attachment_image_tag post, :post_image, class: "card-img-top"%>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col">
            <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallcack:"img/images/no_image.jpg" , class: "mt-3 rounded-circle"; %>
          </div>
          <div class="col-10">
            <p class="card-title"><%= post.title %></p>
            <span><i class="fas fa-user"></i><%= post.user.name %></span>
            <span><%= link_to "#{post.comments.count}コメント", post_path(post) , class: "text-dark" %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @posts %>
</div>




