<h2><%= @user.name %>のfollow</h2>
<% @users.each do |user| %>
<div class="row justify-content-center">
  <div class="col-3">
  <%= link_to user_path(user) do%>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback:"images/no_image.jpg", class: "mt-3 rounded-circle" %>
  <% end %>
  </div>
  <div class="col-7">
  <%= link_to user_path(user) do%>
    <p><%= user.name %></p>
  <% end %>
  </div>
</div>
<% end %>