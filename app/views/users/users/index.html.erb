<div class="container">
  <div class="row">
    <div class="col-8">
      <h1>ユーザー一覧</h1>
    </div>
    <div class="col-4">
      <div class="search_form">
      <%= form_with url:search_users_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
      </div>
    </div>
  </div>
  <!--ここから会員一覧表示-->
  <% @users.each do |user| %>
  <div class="row justify-content-center">
    <div class="col-3">
      <%= link_to user_path(user) do%>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback:"images/no_image.jpg", class: "mt-3 rounded-circle" %>
      <% end %>
    </div>
    <div class="col-7">
      <%= link_to user_path(user) do%>
      <p><%= user.name %></p>
      <% end %>
    </div>
  </div>
  <% end %>
  </div>
</div>

