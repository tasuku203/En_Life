<%= flash[:guest_success] %>

<div class= "container" >
  <div class= "row mx-auto">
    <div class= "col">
      <h1>タイムライン</h1>
    </div>
  </div>
  <div class="row d-flex flex-wrap">
      <% if current_user.followings.count == 0 %>
        <%= render 'users/posts/list', posts:@posts_all %>
      <% else %>
        <%= render 'users/posts/list', posts:@posts %>
      <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <% if current_user.followings.count == 0 %>
     <%= paginate @posts_all %>
    <% else %>
     <%= paginate @posts %>
    <% end %>
  </div>
</div>


