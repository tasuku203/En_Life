

<div class="container">
  <div class="row">
    <div class="col-8">
      <h1>ユーザー一覧</h1>
    </div>
    <div class="col-4">
      <div class="search_form">
      <%= form_with url:search_admins_users_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
      </div>
    </div>
  </div>
  <!--ここから会員一覧表示-->
  <div class="row justify-content-center md-auto">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th></th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <tr>
          <th><%= user.id %></th>
          <td>
          <%= link_to admins_user_path(user) do%>
            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "images/no_image.jpg" %>
          <% end %>
          </td>
          <td>
          <%= link_to admins_users_path(user) do %>
            <%= user.name %>
          <% end %>
          </td>
          <td><%= user.email %></td>
          <td>
          <% if user.is_active == true %>
            <p class="text-success">有効</p>
          <% else %>
            <p>無効</p>
          <% end %>
          </td>
        </tr>
      </tbody>
      <% end %> 
    </table>
    <%= paginate @users %>
  </div>
</div>