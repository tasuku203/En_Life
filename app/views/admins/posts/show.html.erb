<div class= "container" >
  <div class= "row">
    <div class= "col">
    
    </div>
  </div>
  <div class="row">
    <div class="col-3 mt-3 d-flex flex-column ">
      <!--プロフィール画像-->
      <%= link_to admins_user_path(@post.user) do %>
      <div class="d-flex justify-content-center">
        <%= attachment_image_tag @post.user, :profile_image, :fill, 150, 150, fallback:"images/no_image.jpg" %>
      </div>
      <!--ユーザーネーム-->
      <div class="d-flex justify-content-center">
        <h4><%= @post.user.name %></h4>
      </div>
      <% end %>
      <!--follow,follower表示-->
      <div class="d-flex">
        <span class="flex-fill"><p class="d-flex justify-content-center">フォロー<%= @post.user.followings.count %></p></span>
        <span class="flex-fill"><p class="d-flex justify-content-center">フォロワー<%= @post.user.followers.count %></p</span>
      </div>
    </div>
    <div class="col-md-8">
      <h2>投稿詳細</h2>
      <!--カード開始-->
      <div class="card w-80 mx-auto mt-4 mb-1 shadow-lg">
        <!--ヘッダー部分-->
        <div class="card header d-flex flex-row">
          <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback:"images/no_image.jpg" , class: "mt-3 rounded-circle"; %>
          <div class="flex-grow-1"><%= @post.user.name %></div>
        </div>
        
        <!--画像表示部分-->
        <%= attachment_image_tag @post, :post_image, class: "card-img-top"%>
        <!--ボディ部分-->
        <div class="card-body pt-0 px-0">
          <div class="d-flex">
            <span><i class="far fa-comment"></i><%= @post.comments.count %> | </span>
          
         
            <span>♡<%= @post.likes.count %></span>
        
          <span class="ml-auto"><%= l @post.created_at%></span>
          </div>
          <h5 class="card-title"><%= @post.title %></h5>
          <p class="card-text"><%= @post.body %></p>
          <!--この投稿にされたコメント一覧へのリンク-->
          <%= link_to "この投稿へのコメントを見る", post_comments_path(@post) %>
        </div>
      </div>
    </div>
  </div>
</div>


